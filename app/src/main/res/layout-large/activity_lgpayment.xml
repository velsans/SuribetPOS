<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/bill_framelayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:background="@drawable/black"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/black_border"
            android:orientation="horizontal">

            <!--<View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/betslip_back"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="JACKPOT"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jackpot_amunt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="CHECK PROMO !"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SRD"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/betslip_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="No.of.Bets:"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Price/Bets:"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Total:"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/noOfBets_bill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceamount_bill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1.50 SRD"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/TotalAmount_bill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1.50 SRD"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="X"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SRD"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="28sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SRD"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_black"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- <LinearLayout
                     android:layout_width="4dp"
                     android:layout_height="match_parent"
                     android:background="@color/betslip_back"/>-->
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/betballsshape"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/betrows_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet1_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet2_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet3_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet4_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet5_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bet6_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/betballsroundprint"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/letters_print"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_black"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:layout_gravity="top"
            android:background="@color/login_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Lotto Payment"
                android:textColor="@drawable/white"
                android:textSize="23dp" />

            <ImageButton
                android:id="@+id/hide_lotto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@mipmap/cancelvoucherwhite" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/textview_or_edittext_hight"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:width="260dp"
                android:text="Number of bet(s)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:visibility="gone" />


            <TextView
                android:id="@+id/txtNumberOfbets_lotto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:gravity="right|center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:visibility="gone">


            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="Stake/Bet"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtstake_lotto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:gravity="right|center"
                android:inputType="number|textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1.50"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:textColorHint="#808080"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="Total stake"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit" />


            <TextView
                android:id="@+id/txtTotalstakeAmount_lotto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:gravity="right|center"
                android:inputType="number|textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#d3d3d3"
                android:textColorHint="#808080"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="@string/Received_amount"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit" />


            <EditText
                android:id="@+id/txtReceivedAmount_lotto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextstyle"
                android:gravity="right|center"
                android:inputType="numberDecimal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:textColorHint="#808080"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="@string/Return_amount"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit" />


            <TextView
                android:id="@+id/txtReturnAmount_lotto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:gravity="right|center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#d3d3d3"></TextView>

            <Button
                android:id="@+id/btnLottoPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_buttonborder"
                android:gravity="center"
                android:text="Pay"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/printer_listsIcon"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="@dimen/textview_or_edittext_hight_large"
                android:clickable="true"
                android:src="@mipmap/printer" />
        </LinearLayout>


    </FrameLayout>


</FrameLayout>
