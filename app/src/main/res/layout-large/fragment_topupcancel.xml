<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">

    <FrameLayout
        android:id="@+id/Cancelled_framelayout"
        android:layout_width="@dimen/printingmaxsize"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/black"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/black_border"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/betslip_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:background="@drawable/black_border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:text="@string/cancelled"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/black_border"
                    android:gravity="center"
                    android:text="TV"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="45dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/topupcancelled_Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="DGTESTYSECIT"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/topupcancelled_TillCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="T1"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/topupcancelled_LocationName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="DGTEST"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/topupcancelled_TransectionDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="@string/cancelled"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/black_border"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="REFUND"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/color_black" />

                    <TextView
                        android:id="@+id/topupcancelled_CurrencyCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="SRD"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/topupcancelled_CurrencyValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="5/-"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_black" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Cancelbetlayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color_black"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/barcodeScannerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@mipmap/barcodeicon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@drawable/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/BarcodeEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:digits="0123456789,"
                    android:gravity="left|center"
                    android:hint="Enter Barcode"
                    android:padding="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_whit"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/CancelBetOkbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="3dp"
                android:src="@mipmap/searchball"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@drawable/black"
                android:textStyle="bold" />


        </LinearLayout>

        <ListView
            android:id="@+id/verifivouchers_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/barcodecancelverifyLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/login_buttonborder"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/barcode_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="1234567890"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currencycode_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SRD"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/amount_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="5.00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cancel_barcodebtn"
                android:layout_width="@dimen/textview_or_edittext_hight_large"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:src="@mipmap/cancelvoucher"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_whit" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom">

        <include
            layout="@layout/printer_btnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>


    <TextView
        android:id="@+id/cancel_vouchers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:layout_gravity="bottom"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/Cancel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
</FrameLayout>















