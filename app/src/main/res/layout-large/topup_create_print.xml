<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/PDF_LargeTextViewTheme"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/BaseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/color_whit"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_layput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createVoucher_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WWW.SURIBET.IN.SR"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_black"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/logos_layput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/createVoucher_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:layout_marginLeft="@dimen/textview_or_edittext_hight_normal"
                    android:layout_marginRight="@dimen/textview_or_edittext_hight_normal"
                    android:scaleType="fitXY"
                    android:src="@mipmap/logo" />
            </LinearLayout>

            <TextView
                android:id="@+id/createVoucher_clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="createVoucher_clientName"
                android:visibility="gone" />

            <TextView
                android:id="@+id/createVoucher_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8296621820"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="left|center"
                    android:text="@string/Voucher"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/createVoucher_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_normal"
                    android:text="1123456789" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.28"
                    android:gravity="center"
                    android:text="Code"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/createVoucher_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Paramaribo"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="@string/Cashier"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/createVoucher_cashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_normal"
                    android:text="Mob POS Test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/retangular_box">

                <TextView
                    android:id="@+id/createVoucher_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#DFDCDF"
                    android:gravity="center"
                    android:text="SRD 10/-"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/retangular_boxnoborder">

                <TextView
                    android:id="@+id/createVoucher_pin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#DFDCDF"
                    android:gravity="center"
                    android:text="PIN #  9432 - 3746 - 3110"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barcode_layput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/barcode_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/betball_hight_large"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_large"
                android:scaleType="fitXY"
                android:src="@mipmap/logo"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer_layput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createVoucher_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="116TV4710382351"
                android:visibility="visible" />

            <TextView
                android:id="@+id/pdf_bottomMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="HOW TO TOPUP YOUR ACCOUNT:"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/retangular_box"
                android:gravity="center">

                <TextView
                    android:id="@+id/createVoucher_bottomRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Topup Vocher Sales subject to ters ad coditions bySURIBET.Slip expires after 90 days.Note:It is NOT possible to cash out a Top Up amount/Voucher"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/CUSTOMER_SERVICE_NUMBER"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/createVoucher_customerServiceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_normal"
                    android:text="1234567890"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/createVoucher_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="04-Apr-2020 08:34"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>