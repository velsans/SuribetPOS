<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/layout_gray"
        android:gravity="center"
        android:text="PAYOUT COMMISSION"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/white"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:background="@color/red"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Rwquest #"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/clear_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/clear_back" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Amount"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/payout_commissionList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/text"
                android:layout_centerVertical="true"
                android:background="@color/primary_heding" />
        </LinearLayout>


        <TextView
            android:id="@+id/payout_cancelled_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/APINotResponding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_whit"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="20-Mar-2015"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@color/clear_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Login_border"
                    android:gravity="center"
                    android:text="Count : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_black" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/clear_back" />

                <TextView
                    android:id="@+id/txtTotalPayoutCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lblAccountNumber"
                    android:layout_weight="1"
                    android:background="@color/Login_border"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Amt : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_black">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/black"
                    android:gravity="right|center"
                    android:text="Online WDR Paid"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red" />


                <TextView
                    android:id="@+id/txtPayout_Paid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lblAccountNumber"
                    android:layout_weight="2"
                    android:background="@color/theme_background"
                    android:gravity="right|center"
                    android:inputType="number"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPayoutComissionPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/black"
                    android:gravity="right|center"
                    android:text="Commission Sales (%)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red" />


                <TextView
                    android:id="@+id/txtPayoutCommSales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lblAccountNumber"
                    android:layout_weight="2"
                    android:background="@color/theme_background"
                    android:gravity="right|center"
                    android:inputType="number"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/black"
                    android:gravity="right|center"
                    android:text="@string/Balance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red" />


                <TextView
                    android:id="@+id/txtPayoutBalReturn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lblAccountNumber"
                    android:layout_weight="2"
                    android:background="@color/theme_background"
                    android:gravity="right|center"
                    android:inputType="number"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:editable="false"
                android:gravity="end|right"
                android:text="20-Mar-2015 07:13PM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_weight="1"
                android:background="@color/color_whit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_gravity="right|bottom"
                android:background="@color/primary_heding"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_buttonborder"
                    android:gravity="center"
                    android:text="Save"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit"
                    android:visibility="gone" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/button_small"
                    android:gravity="center"
                    android:text="Print"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/btnPrint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_buttonborder"
                    android:gravity="center"
                    android:text="Print"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="160dp">

            <include
                layout="@layout/printer_btnlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>



