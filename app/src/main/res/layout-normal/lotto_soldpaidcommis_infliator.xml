<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/textview_or_edittext_hight"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lotto_soldpaid_barcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/threerColor"
        android:gravity="center" />

    <TextView
        android:id="@+id/lotto_soldpaid_bets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/fourColor"
        android:gravity="center" />

    <TextView
        android:id="@+id/lotto_soldpaid_amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/fiveColor"
        android:gravity="center" />

    <TextView
        android:id="@+id/lotto_soldpaid_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/freeletterColor"
        android:gravity="center" />
</LinearLayout>
