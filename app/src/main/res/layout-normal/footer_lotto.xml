<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/login_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/replayBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/login_buttonborder"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Replay"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_whit" />

        <EditText
            android:id="@+id/ReplayBarcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:gravity="left|center"
            android:padding="5dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/barcodeScannerBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/color_black"
            android:gravity="center"
            android:padding="5dp"
            android:src="@mipmap/barcodeicon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFooter1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FreeTicketpaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/clear_back"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Free Ticket Payment"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:layout_weight="2"
            android:background="@color/Login_border"
            android:gravity="right|center"
            android:paddingLeft="5dp"
            android:text="No of Bets"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtBetCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lblAccountNumber"
            android:layout_weight="2"
            android:background="@drawable/edittextstyle"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="false"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:gravity="right|center"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_whit">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight"
        android:layout_below="@+id/linearFooter1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_buttonborder"
                android:gravity="center"
                android:text="Save"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
        </LinearLayout>

        <!--  <com.andexert.library.RippleView
              android:id="@+id/btnNumber"
              rv_centered="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >

              <Button
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/login_buttonborder"
                  android:gravity="center"
                  android:text="Number"
                  android:textStyle="bold"/>
          </com.andexert.library.RippleView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/clear_back"
                android:gravity="center"
                android:text="@string/Cancel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>