<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/backgroud"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/login_background"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/demon_manualy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:digits="0123456789"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Enter Denomination"
            android:inputType="number"
            android:maxLength="6"
            android:padding="@dimen/padding_large"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textColorHint="@color/primary_text"
            ></EditText>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/login_background"
            android:orientation="horizontal"/>

        <EditText
            android:id="@+id/qty_manual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_background"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:hint="Qty"
            android:inputType="number"
            android:padding="5dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_whit"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/add_manually"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_buttonborder"
            android:clickable="true"
            android:text="+"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/ClearAll_topup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/clear_back"
            android:clickable="true"
            android:text="@string/Cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/login_background"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E0D9D9"
                android:gravity="center"
                android:text="Voucher(s)"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:id="@+id/editTextNumberOfVouchers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_background"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center|end"
                android:text="50"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#a4c639"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/login_background"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E0D9D9"
                android:gravity="center"
                android:paddingRight="3dp"
                android:text="@string/Amount"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:id="@+id/editTextTotalNumberOfAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/theme_background"
                android:gravity="center|end"
                android:minWidth="75dp"
                android:paddingRight="3dp"
                android:text="5000.00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#a4c639"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_buttonborder"
            android:gravity="center|fill_vertical"
            android:text="Pick Denomination"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_buttonborder"
            android:gravity="center|fill_vertical"
            android:text="Pay Voucher"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>
</LinearLayout>
