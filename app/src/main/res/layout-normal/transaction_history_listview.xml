<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTxtlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:text="29-12-9999"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/accTxtlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="VG"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/black" />

        <TextView
            android:id="@+id/timeTxtlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="02:59"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/black" />


        <TextView
            android:id="@+id/noteTxtlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center"
            android:text="SLIP:153V10025 PAID:5.00 SRD[CANCELLED]"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/black" />


        <TextView
            android:id="@+id/paidTxtlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="right|center"
            android:paddingRight="5dp"
            android:text="Rece:9999.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/black" />

        <TextView
            android:id="@+id/recTxtlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="right|center"
            android:paddingRight="5dp"
            android:text="5.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/black"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>