<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Cancelpopup_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_background"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:background="@color/color_black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="CANCEL BET"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_whit" />

            <ImageView
                android:id="@+id/hide_cancelpopup_btn_lotto"
                android:layout_width="@dimen/textview_or_edittext_hight"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_gravity="right|center"
                android:background="@mipmap/cancelvoucherwhite"
                android:padding="5dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_background"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:layout_margin="2dp"
            android:background="@color/color_black"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/barcodeScannerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="1dp"
                    android:src="@mipmap/barcodeicon"
                    android:textColor="@drawable/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/BarcodeEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:hint="Enter Barcode"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/lottocancel_searchBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:src="@mipmap/searchball"
                android:textColor="@drawable/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_animations_accent"
                android:gravity="right|center"
                android:text="No of Bets"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lottocancel_noofbets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/twoColor"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_animations_accent"
                android:gravity="right|center"
                android:text="Currency"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lottocancel_currency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/twoColor"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_animations_accent"
                android:gravity="right|center"
                android:text="@string/Total_Amount"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lottocancel_totamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/twoColor"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_animations_accent"
                android:gravity="right|center"
                android:text="Slip Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lottocancel_sliptime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/twoColor"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_animations_accent"
                android:gravity="right|center"
                android:text="Current Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lottocancel_currentTme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/twoColor"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


        <TextView
            android:id="@+id/lottocancel_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:background="@color/color_black"
            android:gravity="center"
            android:text="N/A"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lottocancel_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/color_lt_UpDown"
                android:gravity="center"
                android:text="CLEAR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/login_background"></View>

            <TextView
                android:id="@+id/lottocancel_vouchers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:text="Cancel Bet! "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
