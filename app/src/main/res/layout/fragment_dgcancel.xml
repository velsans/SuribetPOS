<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Cancelpopup_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="CANCEL BET"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_whit" />

            <ImageView
                android:id="@+id/hide_cancelpopup_btn_dg"
                android:layout_width="@dimen/textview_or_edittext_hight"
                android:layout_height="@dimen/textview_or_edittext_hight"
                android:layout_gravity="right|center"
                android:background="@mipmap/cancelvoucherwhite"
                android:padding="5dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/Cancelbetlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:background="@color/color_black"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/barcodeScannerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:src="@mipmap/barcodeicon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/BarcodeEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:hint="Enter Barcode"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_whit"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/CancelBetOkbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:src="@mipmap/searchball"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/barcodecancelverifyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_normal"
                android:layout_gravity="bottom"
                android:gravity="left|center"
                android:text="Slip Details:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_buttonborder"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="BetNumbers:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Total Stake:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Currency:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Multiplier:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Winning Amt:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="Slip Time:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cancel_betnumbers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/cancel_totalstake"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView

                        android:id="@+id/cancel_currency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/cancel_multiplier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/cancel_winningamt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/cancel_sliptime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/cancel_barcodebtn"
                        android:layout_width="@dimen/textview_or_edittext_hight_large"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:src="@mipmap/cancelvoucher"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_whit"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_normal"
                android:layout_gravity="bottom"
                android:gravity="left|center"
                android:text="Status:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancel_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:gravity="center"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_whit"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/cancel_vouchersTXT"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:gravity="center"
            android:text="Cancel Bet! "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
